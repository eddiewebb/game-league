{% extends 'base.html.twig' %}

{% block title %}GameRole index{% endblock %}

{% block body %}
    <h1>GameRole index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game_role in game_roles %}
            <tr>
                <td>{{ game_role.id }}</td>
                <td>{{ game_role.name }}</td>
                <td>
                    <a href="{{ path('app_game_role_show', {'id': game_role.id}) }}">show</a>
                    <a href="{{ path('app_game_role_edit', {'id': game_role.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_role_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
